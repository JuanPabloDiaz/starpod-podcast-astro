---
import starpodConfig from '../../starpod.config';

const { hosts } = starpodConfig;
---

<div class="mx-2 px-4 bg-light-card sm:px-6 md:px-4 lg:px-16 dark:bg-dark-card">
  <h3 class="section-heading pb-6 pt-12">Hosted By</h3>

  {
    hosts.map((host) => (
      <div class="mb-4 flex items-center">
        <img
          class="mr-4 h-12 w-12 rounded-lg"
          height={48}
          src={host.img}
          width={48}
        />
        {host.name}
      </div>
    ))
  }
</div>
